@model clinic_management_system.Models.MedicalReport

@{
    ViewData["Title"] = "Create";
    var admission = ViewData["Admission"] as Admission;
}

<h1>Create</h1>

<h4>MedicalReport</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <input type="hidden" asp-for="Id" value="0"/>
                <input type="hidden" asp-for="AdmissionId" value="@admission.Id"/>
                <label asp-for="ReportDescription" class="control-label"></label>
                <input asp-for="ReportDescription" class="form-control" />
                <span asp-validation-for="ReportDescription" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create Medical Report" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index" asp-controller="Admissions">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
